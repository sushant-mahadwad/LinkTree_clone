
<%= stylesheet_link_tag "devise" %>

<div class="row">
    <div class="column column-65">
<p style="font-size: 48px; font-weight: bold; text-align:center; margin-bottom: 10px;">Forgot your password?</p>
<p style="font-size: 16px; text-align:center; color: grey;">Not to worry.</p>
    <div class="form">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field-input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:"button-1", style:"width: 70%;" %>
  </div>

<% end %>


        <!-- Content for the first column goes here -->
    </div>
      <div style="text-align: center; margin-top: 10px;">
  <%= render "devise/shared/links" %>
  </div>
    </div>
    <div class="column column-35">
   
        <!-- Content for the second column goes here -->
    </div>
</div>